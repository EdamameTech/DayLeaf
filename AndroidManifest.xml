<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edamametech.android.DropMemo"
    android:versionCode="1"
    android:versionName="0.0" >

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:icon="@drawable/ic_menu_edit"
        android:label="@string/app_name" >
        <receiver
            android:label="@string/edit_widget_name"
            android:name=".DropMemoEditWidgetProvider" >
            <intent-filter >
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/editappwidget" />
        </receiver>

        <receiver
            android:label="@string/send_widget_name"
            android:name=".DropMemoSendWidgetProvider" >
            <intent-filter >
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/sendappwidget" />
        </receiver>
    </application>

</manifest>
